@model ST10439055_CLDVPOE.Models.FileUploadModel
@{
    ViewData["Title"] = "Upload Files";
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2><i class="fas fa-upload"></i> Upload Payment Proof</h2>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="ProofOfPayment" class="form-label"></label>
                        <input asp-for="ProofOfPayment" class="form-control" type="file" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx" />
                        <span asp-validation-for="ProofOfPayment" class="text-danger"></span>
                        <div class="form-text">Accepted formats: PDF, JPG, PNG, DOC, DOCX (Max 10MB)</div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="OrderId" class="form-label"></label>
                                <input asp-for="OrderId" class="form-control" placeholder="Optional: Enter Order ID" />
                                <span asp-validation-for="OrderId" class="text-danger"></span>
                                <div class="form-text">Link this payment to a specific order</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="CustomerName" class="form-label"></label>
                                <input asp-for="CustomerName" class="form-control" placeholder="Optional: Enter Customer Name" />
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                                <div class="form-text">For easier identification</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-upload"></i> Upload File
                        </button>
                        <button type="reset" class="btn btn-secondary">
                            <i class="fas fa-undo"></i> Clear Form
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0"><i class="fas fa-info-circle"></i> Upload Guidelines</h6>
            </div>
            <div class="card-body">
                <h6>File Requirements:</h6>
                <ul class="small">
                    <li>Maximum file size: 10MB</li>
                    <li>Supported formats: PDF, JPG, PNG, DOC, DOCX</li>
                    <li>Clear, readable payment confirmation</li>
                </ul>
                
                <h6 class="mt-3">What Happens:</h6>
                <ul class="small">
                    <li>File is uploaded to Azure Blob Storage</li>
                    <li>Copy is also stored in File Share for contracts</li>
                    <li>File name is timestamped for uniqueness</li>
                    <li>You'll receive a confirmation message</li>
                </ul>
                
                <h6 class="mt-3">Best Practices:</h6>
                <ul class="small">
                    <li>Use descriptive file names</li>
                    <li>Ensure payment details are visible</li>
                    <li>Include order reference when possible</li>
                    <li>Keep files organized and accessible</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
