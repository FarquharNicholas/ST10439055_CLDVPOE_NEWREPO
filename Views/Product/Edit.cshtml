@model ST10439055_CLDVPOE.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<h2><i class="fas fa-edit"></i> Edit Product</h2>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="RowKey" />
            <input type="hidden" asp-for="PartitionKey" />
            <input type="hidden" asp-for="ETag" />
            <input type="hidden" asp-for="Timestamp" />
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> <strong>Product ID:</strong> @Model.ProductId.Substring(0, 8)...
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ProductName" class="form-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="PriceString" class="form-label">Price</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="PriceString" name="PriceString" class="form-control" type="text" />
                        </div>
                        <span asp-validation-for="PriceString" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="StockAvailable" class="form-label"></label>
                        <input asp-for="StockAvailable" class="form-control" type="number" min="0" />
                        <span asp-validation-for="StockAvailable" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-group mb-3">
                <label for="imageFile" class="form-label">Product Image</label>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-2">
                        <strong>Current Image:</strong>
                        <img src="@Model.ImageUrl" alt="@Model.ProductName" class="img-thumbnail d-block mt-1" style="max-width: 200px;" />
                    </div>
                }
                <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/*" />
                <div class="form-text">Upload a new image to replace the current one (optional)</div>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Update Product
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">Product Information</h6>
            </div>
            <div class="card-body">
                <p>
                    <strong>Created:</strong><br />
                    <small class="text-muted">@Model.Timestamp?.ToString("MMM dd, yyyy HH:mm")</small>
                </p>
                <p>
                    <strong>Full Product ID:</strong><br />
                    <small class="text-muted font-monospace">@Model.ProductId</small>
                </p>
                <p>
                    <strong>Current Price:</strong><br />
                    <span class="text-success h5">@Model.Price.ToString("C")</span>
                </p>
                <p>
                    <strong>Current Stock:</strong><br />
                    <span class="badge bg-@(Model.StockAvailable > 10 ? "success" : Model.StockAvailable > 0 ? "warning" : "danger")">
                        @Model.StockAvailable
                    </span>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
