@model ST10439055_CLDVPOE.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="mb-5 p-4 glass">
    <div class="d-flex align-items-center flex-wrap gap-3">
        <div class="display-5" style="line-height:1.1;">
            <strong>Welcome to</strong>
            <div class="fw-bold" style="background:linear-gradient(90deg,#7c3aed,#f1d4ff);-webkit-background-clip:text;-webkit-text-fill-color:transparent;">
                StartionaryCompanySellerOfTheBestStationary
            </div>
        </div>
        <div class="ms-auto text-muted">
            Your one-stop shop for the best deals and latest products
        </div>
    </div>
</div>

<!-- Action Buttons -->
<div class="row g-4 mb-5">
    <div class="col-md-3">
        <a asp-controller="Customer" asp-action="Index" class="card text-center p-4 text-decoration-none">
            <i class="fas fa-users fa-2x mb-2 text-primary"></i>
            <div class="fw-semibold">Customers</div>
            <small class="text-muted">@Model.CustomerCount total</small>
        </a>
    </div>
    <div class="col-md-3">
        <a asp-controller="Product" asp-action="Index" class="card text-center p-4 text-decoration-none">
            <i class="fas fa-box fa-2x mb-2" style="color:#7c3aed"></i>
            <div class="fw-semibold">Products</div>
            <small class="text-muted">@Model.ProductCount total</small>
        </a>
    </div>
    <div class="col-md-3">
        <a asp-controller="Order" asp-action="Index" class="card text-center p-4 text-decoration-none">
            <i class="fas fa-shopping-cart fa-2x mb-2" style="color:#a78bfa"></i>
            <div class="fw-semibold">Orders</div>
            <small class="text-muted">@Model.OrderCount total</small>
        </a>
    </div>
    <div class="col-md-3">
        <a asp-controller="Upload" asp-action="Index" class="card text-center p-4 text-decoration-none">
            <i class="fas fa-upload fa-2x mb-2" style="color:#7c3aed"></i>
            <div class="fw-semibold">Upload Files</div>
            <small class="text-muted">Payment proofs</small>
        </a>
    </div>
</div>

<!-- Storage Initialization (if needed) -->
@if (Model.CustomerCount == 0 && Model.ProductCount == 0 && Model.OrderCount == 0)
{
    <div class="alert alert-warning">
        <h5><i class="fas fa-exclamation-triangle"></i> First Time Setup</h5>
        <p>It looks like this is your first time running the application. Click the button below to initialize Azure Storage.</p>
        <form asp-action="InitializeStorage" method="post" style="display: inline;">
            <button type="submit" class="btn btn-warning">
                <i class="fas fa-cog"></i> Initialize Azure Storage
            </button>
        </form>
    </div>
}

<!-- Featured Products Section -->
<div class="row">
    <div class="col-12">
        <h2 class="mb-4"><i class="fas fa-star" style="color:#a78bfa"></i> Featured Products</h2>
        @if (Model.FeaturedProducts.Any())
        {
            <div class="row justify-content-center">
                @foreach (var product in Model.FeaturedProducts)
                {
                    <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">
                        <div class="card h-100">
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" style="height: 150px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title text-center">@product.ProductName</h6>
                                <p class="card-text small text-muted flex-grow-1 text-center">
                                    @(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)
                                </p>
                                <div class="mt-auto text-center">
                                    <p class="card-text">
                                        <strong class="text-success">@product.Price.ToString("C")</strong>
                                    </p>
                                    <small class="text-muted">Stock: @product.StockAvailable</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> No products available yet. 
                <a asp-controller="Product" asp-action="Create" class="alert-link">Add your first product</a>!
            </div>
        }
    </div>
</div>
